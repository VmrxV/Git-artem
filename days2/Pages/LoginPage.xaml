<Page x:Class="days2.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:days2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Код" FontSize="21" HorizontalAlignment="Center"/>
            <TextBox Width="200" Height="20" Name="tbCode" MaxLength="10"/>
            <Button Width="200" Height="20" Content="Войти как Пользователь" Name="butLogin" 
                    Margin="10" Click="butLogin_Click"/>
            <Button Width="200" Height="20" Content="Войти как Администратор" Name="butLoginUser" 
                    Margin="10" Click="ButLoginUser_Click"/>
        </StackPanel>
    </Grid>
</Page>
